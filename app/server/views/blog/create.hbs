{{#extend "layouts/default"}}
    {{#content "body_content"}}
        <h1><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> New article</h1>
        <hr>
        <form method="post" action="/blog/create">
            {{> alerts/error}}
            {{> alerts/success}}
            <fieldset>
                <div class="form-group">
                    <label class="control-label" for="title">Title</label>
                    <input id="title" name="title" class="form-control" placeholder="" type="text">
                </div>

                <div class="form-group">
                    <label class="control-label" for="department">Body</label>
                    <textarea id="body" name="body" placeholder="" class="form-control" rows="3"></textarea>
                </div>

                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary">
                </div>
            </fieldset>
        </form>
    {{/content}}
{{/extend}}
